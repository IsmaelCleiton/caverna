---
import Layout from "../layouts/Layout.astro";
import LinedPaper from "../layouts/LinedPaper.astro";

// Bloqueia acesso à página em produção
if (!import.meta.env.DEV) {
    return Astro.redirect("/");
}
---

<Layout title="Criar Novo Post">
    <div class="admin-container">
        <header>
            <h1>Criar Novo Post</h1>
            <button id="saveBtn" class="btn-save">Salvar Post</button>
        </header>

        <div class="meta-form">
            <div class="form-group">
                <label>Título</label>
                <input type="text" id="title" placeholder="Título do Post" />
            </div>

            <div class="form-group">
                <label>Slug (URL)</label>
                <input type="text" id="slug" placeholder="meu-post-incrivel" />
            </div>

            <div class="form-group">
                <label>Descrição</label>
                <input
                    type="text"
                    id="description"
                    placeholder="Breve descrição..."
                />
            </div>

            <div class="form-group">
                <label>Tags (separadas por vírgula)</label>
                <input
                    type="text"
                    id="tags"
                    placeholder="ex: tecnologia, astro, tutorial"
                />
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Autor</label>
                    <input type="text" id="author" value="Ismael Cleiton" />
                </div>
                <div class="form-group">
                    <label>Data</label>
                    <input type="date" id="date" />
                </div>
            </div>
        </div>

        <div class="editor-area">
            <div class="editor-pane">
                <div class="editor-head">
                    <h3>Editor Markdown</h3>
                    <div class="editor-actions"></div>
                </div>
                <textarea
                    id="content"
                    placeholder="Escreva seu conteúdo aqui..."></textarea>
            </div>
        </div>
    </div>
</Layout>

<link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.css"
/>
<script is:inline src="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.js"
></script>
<script is:inline src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"
></script>
<script src="https://cdn.jsdelivr.net/highlight.js/latest/highlight.min.js"
></script>
<link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/highlight.js/latest/styles/github.min.css"
/>

<script>
    const dateValue = new Date();
    const dateInput = document.getElementById("date") as HTMLInputElement;
    dateInput.valueAsDate = dateValue;

    const titleInput = document.getElementById("title") as HTMLInputElement;
    const slugInput = document.getElementById("slug") as HTMLInputElement;
    // Inicializa EasyMDE no textarea
    // @ts-ignore
    const easyMDE = new EasyMDE({
        element: document.getElementById("content"),
        //previewClass: "markdown-body",
        spellChecker: true,
        autofocus: true,
        autosave: { enabled: false },
        placeholder: "Escreva seu conteúdo aqui...",
        renderingConfig: {
            singleLineBreaks: true,
            codeSyntaxHighlighting: true,
        },
        showIcons: ["code", "table", "horizontal-rule"],
        status: ["lines", "words", "cursor"],
    });

    const previewDiv = document.getElementById("preview");

    titleInput.addEventListener("input", () => {
        const slug = titleInput.value
            .toLowerCase()
            .normalize("NFD")
            .replace(/[\u0300-\u036f]/g, "")
            .replace(/[^a-z0-9\s-]/g, "")
            .trim()
            .replace(/\s+/g, "-");
        slugInput.value = slug;
    });

    document.getElementById("saveBtn")?.addEventListener("click", async () => {
        console.log("Salvando post...", dateValue);

        const tagsInput = document.getElementById("tags") as HTMLInputElement;
        const tags = tagsInput.value
            .split(",")
            .map((tag) => tag.trim())
            .filter((tag) => tag.length > 0);

        const postData = {
            title: titleInput.value,
            slug: slugInput.value,
            description: (
                document.getElementById("description") as HTMLInputElement
            ).value,
            author: (document.getElementById("author") as HTMLInputElement)
                .value,
            content: easyMDE.value(),
            pubDate: dateValue.toISOString(),
            tags: tags,
        };

        try {
            const response = await fetch("/api/save-post", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(postData),
            });

            const result = await response.json();

            if (response.ok) {
                alert("✅ Post salvo com sucesso!");
                window.location.href = `/blog/${postData.slug}`;
            } else {
                alert("❌ Erro: " + result.message);
            }
        } catch (err) {
            alert("Erro de conexão ao salvar.");
        }
    });
</script>
